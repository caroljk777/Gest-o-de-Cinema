@model GestaoDeCinema.Models.Utilizador

@{
    ViewData["Title"] = "Eliminar Utilizador";
}

<div class="row">
    <div class="col-md-6 offset-md-3">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h2 class="h4 fw-bold text-danger">@ViewData["Title"]</h2>
            <a asp-action="Index" class="btn btn-secondary">
                <i class="bi bi-arrow-left"></i> Voltar
            </a>
        </div>

        <div class="card shadow-sm border-danger">
            <div class="card-header bg-danger text-white">
                <h5 class="mb-0">⚠️ Confirmação de Eliminação</h5>
            </div>
            <div class="card-body">
                <p class="alert alert-warning">
                    <strong>Atenção!</strong> Tem certeza que deseja eliminar este utilizador? Esta ação não pode ser desfeita.
                </p>

                <dl class="row">
                    <dt class="col-sm-3">Nome</dt>
                    <dd class="col-sm-9">@Model.Nome</dd>

                    <dt class="col-sm-3">Email</dt>
                    <dd class="col-sm-9">@Model.Email</dd>

                    <dt class="col-sm-3">Função</dt>
                    <dd class="col-sm-9">
                        @if (Model.Funcao == "Administrador")
                        {
                            <span class="badge bg-danger">@Model.Funcao</span>
                        }
                        else
                        {
                            <span class="badge bg-primary">@Model.Funcao</span>
                        }
                    </dd>
                </dl>

                <hr>

                <form asp-action="Delete" method="post">
                    @Html.AntiForgeryToken()
                    <input type="hidden" asp-for="Id" />
                    <div class="d-flex gap-2">
                        <button type="submit" class="btn btn-danger">
                            Confirmar Eliminação
                        </button>
                        <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
