@model GestaoDeCinema.Models.AdminDashboardViewModel

@{
    Layout = null;
    ViewData["Title"] = "Admin Dashboard";
}

<!DOCTYPE html>
<html lang="pt-pt">
<head>
    <meta charset="utf-8" />
    <meta content="width=device-width, initial-scale=1.0" name="viewport" />
    <title>@ViewData["Title"]</title>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    
    <link href="https://fonts.googleapis.com/css2?family=Plus+Jakarta+Sans:wght@400;500;700;800&display=swap" rel="stylesheet" />
    <link href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:wght,FILL@100..700,0..1&display=swap" rel="stylesheet" />
   
    <link rel="stylesheet" href="~/css/cinemaTheme.css" />

    <style>
        :root {
            --primary-color: #ec135b;
            --bg-dark: #181113;       /* Fundo Principal */
            --bg-card: #1e1e1e;       /* Fundo das Cards/Sidebar */
            --border-color: #333;
            --text-muted: #a0a0a0;
        }

        body {
            background-color: var(--bg-dark);
            color: white;
            font-family: 'Plus Jakarta Sans', sans-serif;
            overflow-x: hidden;
        }

        /* Sidebar */
        .sidebar {
            width: 260px;
            background-color: var(--bg-card);
            border-right: 1px solid var(--border-color);
            min-height: 100vh;
            position: fixed;
            top: 0;
            left: 0;
            z-index: 1000;
        }

        .nav-link {
            color: var(--text-muted);
            font-weight: 500;
            padding: 12px 16px;
            border-radius: 8px;
            display: flex;
            align-items: center;
            gap: 12px;
            transition: all 0.3s;
        }

        .nav-link:hover, .nav-link.active {
            background-color: rgba(236, 19, 91, 0.1);
            color: var(--primary-color);
        }

        .nav-link .material-symbols-outlined {
            font-size: 22px;
        }

        /* Conteúdo Principal */
        .main-content {
            margin-left: 260px; /* Largura da sidebar */
            padding: 24px;
        }

        /* Header */
        .top-header {
            background-color: rgba(30, 30, 30, 0.8);
            backdrop-filter: blur(10px);
            border-bottom: 1px solid var(--border-color);
            position: sticky;
            top: 0;
            z-index: 900;
        }

        /* Cards de Estatísticas */
        .stat-card {
            background-color: var(--bg-card);
            border: 1px solid var(--border-color);
            border-radius: 12px;
            padding: 24px;
        }
        
        .text-primary-custom { color: var(--primary-color) !important; }
        .bg-primary-custom { background-color: var(--primary-color) !important; }

        /* Tabela */
        .table-custom {
            background-color: var(--bg-card);
            border-radius: 12px;
            overflow: hidden;
            border: 1px solid var(--border-color);
        }

        .table-custom table {
            width: 100%;
            color: white;
            margin-bottom: 0;
        }

        .table-custom th {
            background-color: rgba(255,255,255,0.05);
            color: var(--text-muted);
            text-transform: uppercase;
            font-size: 0.75rem;
            font-weight: 700;
            border-bottom: 1px solid var(--border-color);
            padding: 16px;
        }

        .table-custom td {
            padding: 16px;
            border-bottom: 1px solid var(--border-color);
            vertical-align: middle;
        }

        .table-custom tr:last-child td { border-bottom: none; }

        /* Inputs de Pesquisa */
        .form-control-dark {
            background-color: #2a2a2a;
            border: 1px solid var(--border-color);
            color: white;
        }
        .form-control-dark:focus {
            background-color: #2a2a2a;
            border-color: var(--primary-color);
            color: white;
            box-shadow: none;
        }

        /* Botões de Ação */
        .btn-action {
            width: 32px;
            height: 32px;
            display: flex;
            align-items: center;
            justify-content: center;
            border-radius: 8px;
            background-color: rgba(255,255,255,0.05);
            color: var(--text-muted);
            transition: 0.2s;
            border: none;
        }
        .btn-action:hover {
            color: white;
            background-color: var(--primary-color);
        }
        .btn-action.delete:hover {
            background-color: #dc3545;
        }

    </style>
</head>
<body>

    <aside class="sidebar d-flex flex-column">
        <div class="d-flex align-items-center gap-3 px-4 py-4 mb-2">
            <img src="~/imagens/iconn.png" style="height: 40px; border-radius: 6px;" alt="Logo">
            <h1 class="h5 fw-bold mb-0 text-white">Admin Cinema</h1>
        </div>

        <nav class="flex-grow-1 px-3">
            <a asp-controller="Admin" asp-action="Index" class="nav-link active mb-1">
                <span class="material-symbols-outlined">dashboard</span>
                Dashboard
            </a>
            <a asp-controller="Filmes" asp-action="Index" class="nav-link mb-1">
                <span class="material-symbols-outlined">theaters</span>
                Filmes
            </a>
            <a asp-controller="Sessoes" asp-action="Index" class="nav-link mb-1">
                <span class="material-symbols-outlined">movie_filter</span>
                Sessões
            </a>
            <a asp-controller="Reservas" asp-action="Index" class="nav-link mb-1">
                <span class="material-symbols-outlined">confirmation_number</span>
                Reservas
            </a>
            <a asp-controller="Utilizadores" asp-action="Index" class="nav-link mb-1">
                <span class="material-symbols-outlined">group</span>
                Utilizadores
            </a>
        </nav>

        <div class="px-3 pb-4 mt-auto">
            <a asp-controller="Account" asp-action="Perfil" class="nav-link mb-1">
                <span class="material-symbols-outlined">settings</span>
                Definições
            </a>
            <form asp-controller="Account" asp-action="Logout" method="post" class="w-100">
                <button type="submit" class="nav-link w-100 border-0 bg-transparent text-danger">
                    <span class="material-symbols-outlined">logout</span>
                    Sair
                </button>
            </form>
        </div>
    </aside>

    <div class="main-content">
        
        <header class="d-flex justify-content-between align-items-center mb-5">
            <h2 class="h5 fw-bold mb-0">Painel de Administração</h2>
            
            <div class="d-flex align-items-center gap-4">
                <div class="position-relative d-none d-sm-block">
                    <span class="material-symbols-outlined position-absolute text-muted" style="left: 10px; top: 8px; font-size: 20px;">search</span>
                    <input type="text" class="form-control form-control-dark ps-5 rounded-3" placeholder="Procurar...">
                </div>
                
                <div class="d-flex align-items-center gap-3">
                    <div class="text-end d-none d-md-block">
                        <p class="mb-0 small fw-bold text-white">@User.Identity.Name</p>
                        <p class="mb-0 small text-muted" style="font-size: 11px;">Administrador</p>
                    </div>
                    <div class="rounded-circle bg-secondary d-flex align-items-center justify-content-center text-white fw-bold" style="width: 40px; height: 40px;">
                        A
                    </div>
                </div>
            </div>
        </header>

        <div class="row g-4 mb-5">
            <div class="col-md-4">
                <div class="stat-card">
                    <p class="text-muted fw-medium mb-1">Total de Filmes</p>
                    <div class="d-flex align-items-end justify-content-between">
                        <h3 class="fw-bold text-white mb-0">@Model.TotalFilmes</h3>
                        <span class="text-success small fw-bold d-flex align-items-center">
                            <span class="material-symbols-outlined fs-6 me-1">trending_up</span> Em Cartaz
                        </span>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="stat-card">
                    <p class="text-muted fw-medium mb-1">Total de Sessões</p>
                    <div class="d-flex align-items-end justify-content-between">
                        <h3 class="fw-bold text-white mb-0">@Model.TotalSessoes</h3>
                        <span class="text-primary-custom small fw-bold">Programadas</span>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="stat-card">
                    <p class="text-muted fw-medium mb-1">Utilizadores</p>
                    <div class="d-flex align-items-end justify-content-between">
                        <h3 class="fw-bold text-white mb-0">@Model.TotalUtilizadores</h3>
                        <span class="text-primary-custom small fw-bold">Registados</span>
                    </div>
                </div>
            </div>
        </div>

        <div class="d-flex justify-content-between align-items-center mb-4">
            <h3 class="h5 fw-bold mb-0">Gestão de Filmes</h3>
            <a asp-controller="Filmes" asp-action="Create" class="btn btn-primary fw-bold d-flex align-items-center gap-2 rounded-3 bg-primary-custom border-0" style="padding: 10px 20px;">
                <span class="material-symbols-outlined fs-5">add</span>
                Adicionar Novo Filme
            </a>
        </div>

        <div class="table-custom">
            <table class="table table-borderless">
                <thead>
                    <tr>
                        <th class="ps-4">Capa</th>
                        <th>Título</th>
                        <th>Género</th>
                        <th>Duração</th>
                        <th class="text-end pe-4">Ações</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.FilmesRecentes)
                    {
                        var imagemUrl = !string.IsNullOrEmpty(item.CapaImagem) ? $"/imagens/{item.CapaImagem}" : "https://via.placeholder.com/300x450?text=Sem+Capa";
                        
                        <tr>
                            <td class="ps-4">
                                <div style="width: 48px; height: 64px; background-image: url('@imagemUrl'); background-size: cover; background-position: center; border-radius: 6px;"></div>
                            </td>
                            <td>
                                <span class="fw-bold text-white">@item.Titulo</span>
                            </td>
                            <td class="text-muted">@item.Genero</td>
                            <td class="text-muted">@item.Duracao min</td>
                            <td class="text-end pe-4">
                                <div class="d-flex justify-content-end gap-2">
                                    <a asp-controller="Filmes" asp-action="Edit" asp-route-id="@item.Id" class="btn-action" title="Editar">
                                        <span class="material-symbols-outlined fs-5">edit</span>
                                    </a>
                                    <a asp-controller="Filmes" asp-action="Delete" asp-route-id="@item.Id" class="btn-action delete" title="Remover">
                                        <span class="material-symbols-outlined fs-5">delete</span>
                                    </a>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>

    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>