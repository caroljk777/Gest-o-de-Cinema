@model IEnumerable\u003cGestaoDeCinema.Models.Reserva\u003e

@{
    Layout = null;
    ViewData["Title"] = "Todas as Reservas";
}

\u003c!DOCTYPE html\u003e
\u003chtml lang="pt-pt"\u003e
\u003chead\u003e
    \u003cmeta charset="utf-8" /\u003e
    \u003cmeta content="width=device-width, initial-scale=1.0" name="viewport" /\u003e
    \u003ctitle\u003e@ViewData["Title"]\u003c/title\u003e

    \u003clink href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet"\u003e
    \u003clink href="https://fonts.googleapis.com/css2?family=Plus+Jakarta+Sans:wght@400;500;700;800\u0026display=swap" rel="stylesheet" /\u003e
    \u003clink href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:wght,FILL@100..700,0..1\u0026display=swap" rel="stylesheet" /\u003e
    \u003clink rel="stylesheet" href="~/css/cinemaTheme.css?v=2" /\u003e

    \u003cstyle\u003e
        :root {
            --primary-color: #ec135b;
            --bg-dark: #181113;
            --bg-card: #1e1e1e;
            --border-color: #333;
            --text-muted: #a0a0a0;
        }

        body {
            background-color: var(--bg-dark);
            color: white;
            font-family: 'Plus Jakarta Sans', sans-serif;
        }

        .sidebar {
            width: 260px;
            background-color: var(--bg-card);
            border-right: 1px solid var(--border-color);
            min-height: 100vh;
            position: fixed;
            top: 0;
            left: 0;
        }

        .nav-link {
            color: var(--text-muted);
            font-weight: 500;
            padding: 12px 16px;
            border-radius: 8px;
            display: flex;
            align-items: center;
            gap: 12px;
            transition: all 0.3s;
            text-decoration: none;
            margin-bottom: 4px;
        }

        .nav-link:hover, .nav-link.active {
            background-color: rgba(236, 19, 91, 0.1);
            color: var(--primary-color);
        }

        .main-content {
            margin-left: 260px;
            padding: 24px;
        }

        .table-custom {
            background-color: var(--bg-card);
            border-radius: 12px;
            overflow: hidden;
            border: 1px solid var(--border-color);
        }
    \u003c/style\u003e
\u003c/head\u003e
\u003cbody\u003e

    \u003caside class="sidebar d-flex flex-column"\u003e
        \u003cdiv class="d-flex align-items-center gap-3 px-4 py-4 mb-2"\u003e
            \u003cimg src="~/imagens/iconn.png" style="height: 40px; border-radius: 6px;" alt="Logo"\u003e
            \u003ch1 class="h5 fw-bold mb-0 text-white"\u003eAdmin Cinema\u003c/h1\u003e
        \u003c/div\u003e

        \u003cnav class="flex-grow-1 px-3"\u003e
            \u003ca asp-controller="Admin" asp-action="Index" class="nav-link"\u003e
                \u003cspan class="material-symbols-outlined"\u003edashboard\u003c/span\u003e
                Dashboard
            \u003c/a\u003e
            \u003ca asp-controller="Filmes" asp-action="Index" class="nav-link"\u003e
                \u003cspan class="material-symbols-outlined"\u003etheaters\u003c/span\u003e
                Filmes
            \u003c/a\u003e
            \u003ca asp-controller="Sessoes" asp-action="Index" class="nav-link"\u003e
                \u003cspan class="material-symbols-outlined"\u003emovie_filter\u003c/span\u003e
                Sess√µes
            \u003c/a\u003e
            \u003ca asp-controller="Admin" asp-action="VerReservas" class="nav-link active"\u003e
                \u003cspan class="material-symbols-outlined"\u003econfirmation_number\u003c/span\u003e
                Reservas
            \u003c/a\u003e
            \u003ca asp-controller="Utilizadores" asp-action="Index" class="nav-link"\u003e
                \u003cspan class="material-symbols-outlined"\u003egroup\u003c/span\u003e
                Utilizadores
            \u003c/a\u003e
        \u003c/nav\u003e

        \u003cdiv class="px-3 pb-4 mt-auto"\u003e
            \u003ca asp-controller="Account" asp-action="Perfil" class="nav-link"\u003e
                \u003cspan class="material-symbols-outlined"\u003esettings\u003c/span\u003e
                Defini√ß√µes
            \u003c/a\u003e
            \u003cform asp-controller="Account" asp-action="Logout" method="post" class="w-100"\u003e
                \u003cbutton type="submit" class="nav-link w-100 border-0 bg-transparent text-danger"\u003e
                    \u003cspan class="material-symbols-outlined"\u003elogout\u003c/span\u003e
                    Sair
                \u003c/button\u003e
            \u003c/form\u003e
        \u003c/div\u003e
    \u003c/aside\u003e

    \u003cdiv class="main-content"\u003e
        \u003cheader class="mb-4"\u003e
            \u003ch2 class="h4 fw-bold text-white mb-1"\u003eüìã Todas as Reservas\u003c/h2\u003e
            \u003cp class="text-muted mb-0"\u003eGest√£o de reservas de todos os utilizadores\u003c/p\u003e
        \u003c/header\u003e

        @if (Model.Any())
        {
            \u003cdiv class="table-custom"\u003e
                \u003ctable class="table table-borderless align-middle"\u003e
                    \u003cthead\u003e
                        \u003ctr\u003e
                            \u003cth class="ps-4"\u003eUtilizador\u003c/th\u003e
                            \u003cth\u003eFilme\u003c/th\u003e
                            \u003cth\u003eSess√£o\u003c/th\u003e
                            \u003cth\u003eLugares\u003c/th\u003e
                            \u003cth\u003ePre√ßo\u003c/th\u003e
                            \u003cth\u003eEstado\u003c/th\u003e
                            \u003cth class="pe-4"\u003eData\u003c/th\u003e
                        \u003c/tr\u003e
                    \u003c/thead\u003e
                    \u003ctbody\u003e
                        @foreach (var reserva in Model)
                        {
                            \u003ctr\u003e
                                \u003ctd class="ps-4"\u003e
                                    \u003cdiv\u003e
                                        \u003cspan class="fw-medium text-white"\u003e@reserva.Utilizador.Nome\u003c/span\u003e
                                        \u003cbr\u003e
                                        \u003csmall class="text-muted"\u003e@reserva.Utilizador.Email\u003c/small\u003e
                                    \u003c/div\u003e
                                \u003c/td\u003e
                                \u003ctd\u003e
                                    \u003cspan class="text-white"\u003e@reserva.Sessao.Filme.Titulo\u003c/span\u003e
                                \u003c/td\u003e
                                \u003ctd\u003e
                                    \u003csmall class="text-muted"\u003e
                                        @reserva.Sessao?.Hora.ToString("dd/MM/yyyy HH:mm")
                                        \u003cbr\u003e
                                        Sala @(reserva.Sessao?.Sala)
                                    \u003c/small\u003e
                                \u003c/td\u003e
                                \u003ctd\u003e
                                    @if (!string.IsNullOrEmpty(reserva.AssentosEscolhidos))
                                    {
                                        \u003cspan class="badge bg-info"\u003e@reserva.AssentosEscolhidos\u003c/span\u003e
                                    }
                                    else
                                    {
                                        \u003cspan class="text-muted"\u003e@(reserva.NumeroLugares) lugar(es)\u003c/span\u003e
                                    }
                                \u003c/td\u003e
                                \u003ctd class="text-white fw-bold"\u003e@reserva.PrecoTotal.ToString("C")\u003c/td\u003e
                                \u003ctd\u003e
                                    @if (reserva.EstadoReserva == "Confirmada")
                                    {
                                        \u003cspan class="badge bg-success"\u003eConfirmada\u003c/span\u003e
                                    }
                                    else
                                    {
                                        \u003cspan class="badge bg-danger"\u003eCancelada\u003c/span\u003e
                                    }
                                \u003c/td\u003e
                                \u003ctd class="pe-4 text-muted small"\u003e
                                    @(reserva.DataReserva.ToString("dd/MM/yyyy HH:mm"))
                                \u003c/td\u003e
                            \u003c/tr\u003e
                        }
                    \u003c/tbody\u003e
                \u003c/table\u003e
            \u003c/div\u003e
        }
        else
        {
            \u003cdiv class="text-center py-5"\u003e
                \u003cspan class="material-symbols-outlined" style="font-size: 64px; color: var(--text-muted);"\u003ereceipt_long\u003c/span\u003e
                \u003ch5 class="text-muted mt-3"\u003eNenhuma reserva encontrada\u003c/h5\u003e
            \u003c/div\u003e
        }

        \u003cdiv class="mt-4"\u003e
            \u003ca asp-controller="Admin" asp-action="Index" class="text-muted text-decoration-none"\u003e
                \u003cspan class="material-symbols-outlined" style="font-size: 18px; vertical-align: middle;"\u003earrow_back\u003c/span\u003e
                Voltar ao Dashboard
            \u003c/a\u003e
        \u003c/div\u003e
    \u003c/div\u003e

    \u003cscript src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"\u003e\u003c/script\u003e
\u003c/body\u003e
\u003c/html\u003e
