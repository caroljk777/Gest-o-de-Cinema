@model IEnumerable<GestaoDeCinema.Models.Reserva>

@{
    Layout = null;
    ViewData["Title"] = "Reservas";
}

<!DOCTYPE html>
<html lang="pt-pt">
<head>
    <meta charset="utf-8" />
    <meta content="width=device-width, initial-scale=1.0" name="viewport" />
    <title>@ViewData["Title"] - Admin</title>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Plus+Jakarta+Sans:wght@400;500;700;800&display=swap" rel="stylesheet" />
    <link href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:wght,FILL@100..700,0..1&display=swap" rel="stylesheet" />
    <link rel="stylesheet" href="~/css/cinemaTheme.css?v=2" />

    <style>
        :root {
            --primary-color: #ec135b;
            --bg-dark: #181113;
            --bg-card: #1e1e1e;
            --border-color: #333;
            --text-muted: #a0a0a0;
        }

        body {
            background-color: var(--bg-dark);
            color: white;
            font-family: 'Plus Jakarta Sans', sans-serif;
            overflow-x: hidden;
        }

        /* Sidebar */
        .sidebar {
            width: 260px;
            background-color: var(--bg-card);
            border-right: 1px solid var(--border-color);
            min-height: 100vh;
            position: fixed;
            top: 0;
            left: 0;
            z-index: 1000;
        }

        .nav-link {
            color: var(--text-muted);
            font-weight: 500;
            padding: 12px 16px;
            border-radius: 8px;
            display: flex;
            align-items: center;
            gap: 12px;
            transition: all 0.3s;
        }

        .nav-link:hover, .nav-link.active {
            background-color: rgba(236, 19, 91, 0.1);
            color: var(--primary-color);
        }

        .nav-link .material-symbols-outlined {
            font-size: 22px;
        }

        /* Conteúdo Principal */
        .main-content {
            margin-left: 260px;
            padding: 24px;
        }

        .text-primary-custom { color: var(--primary-color) !important; }

        /* Tabela */
        .table-custom {
            background-color: var(--bg-card);
            border-radius: 12px;
            overflow: hidden;
            border: 1px solid var(--border-color);
        }

        .table-custom table {
            width: 100%;
            color: white;
            margin-bottom: 0;
        }

        .table-custom th {
            background-color: rgba(255,255,255,0.05);
            color: var(--text-muted);
            text-transform: uppercase;
            font-size: 0.75rem;
            font-weight: 700;
            border-bottom: 1px solid var(--border-color);
            padding: 16px;
        }

        .table-custom td {
            padding: 16px;
            border-bottom: 1px solid var(--border-color);
            vertical-align: middle;
        }

        .table-custom tr:last-child td { border-bottom: none; }
        
        .table-custom tbody tr { background-color: var(--bg-card) !important; }
        .table-custom tbody td { color: white !important; }
    </style>
</head>
<body>

    <aside class="sidebar d-flex flex-column">
        <div class="d-flex align-items-center gap-3 px-4 py-4 mb-2">
            <img src="~/imagens/logo_cinema.jpg" style="height: 40px; border-radius: 6px;" alt="Logo">
            <h1 class="h5 fw-bold mb-0 text-white">Admin Cinema</h1>
        </div>

        <nav class="flex-grow-1 px-3">
            <a asp-controller="Admin" asp-action="Index" class="nav-link mb-1">
                <span class="material-symbols-outlined">dashboard</span>
                Dashboard
            </a>
            <a asp-controller="Filmes" asp-action="Index" class="nav-link mb-1">
                <span class="material-symbols-outlined">theaters</span>
                Filmes
            </a>
            <a asp-controller="Sessoes" asp-action="Index" class="nav-link mb-1">
                <span class="material-symbols-outlined">movie_filter</span>
                Sessões
            </a>
            <a asp-controller="Admin" asp-action="VerReservas" class="nav-link active mb-1">
                <span class="material-symbols-outlined">confirmation_number</span>
                Reservas
            </a>
            <a asp-controller="Utilizadores" asp-action="Index" class="nav-link mb-1">
                <span class="material-symbols-outlined">group</span>
                Utilizadores
            </a>
        </nav>

        <div class="px-3 pb-4 mt-auto">
            <a asp-controller="Account" asp-action="Perfil" class="nav-link mb-1">
                <span class="material-symbols-outlined">settings</span>
                Definições
            </a>
            <form asp-controller="Account" asp-action="Logout" method="post" class="w-100">
                <button type="submit" class="nav-link w-100 border-0 bg-transparent text-danger">
                    <span class="material-symbols-outlined">logout</span>
                    Sair
                </button>
            </form>
        </div>
    </aside>

    <div class="main-content">
        
        <div class="d-flex justify-content-between align-items-center mb-5">
            <div>
                <h2 class="h5 fw-bold mb-1">Todas as Reservas</h2>

            </div>
        </div>

        @if (Model.Any())
        {
            <div class="table-custom">
                <table class="table table-borderless">
                    <thead>
                        <tr>
                            <th class="ps-4">Utilizador</th>
                            <th>Filme</th>
                            <th>Sessão</th>
                            <th>Lugares</th>
                            <th>Preço</th>
                            <th class="pe-4">Data</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var reserva in Model)
                        {
                            <tr>
                                <td class="ps-4">
                                    <span class="fw-bold text-white">@(reserva.Utilizador?.Nome ?? "N/A")</span><br>
                                    <small class="text-white">@(reserva.Utilizador?.Email ?? "N/A")</small>
                                </td>
                                <td class="text-white">@(reserva.Sessao?.Filme?.Titulo ?? "N/A")</td>
                                <td>
                                    <span class="text-white">@(reserva.Sessao?.Hora.ToString("dd/MM/yyyy HH:mm") ?? "N/A")</span><br>
                                    <small class="text-white">Sala @(reserva.Sessao?.Sala)</small>
                                </td>
                                <td>
                                    @if (!string.IsNullOrEmpty(reserva.AssentosEscolhidos))
                                    {
                                        <span class="text-white">@reserva.AssentosEscolhidos</span>
                                    }
                                    else
                                    {
                                        <span class="text-white">@reserva.NumeroLugares lugar(es)</span>
                                    }
                                </td>
                                <td class="text-primary-custom fw-bold">@reserva.PrecoTotal.ToString("C")</td>
                                <td class="pe-4 text-white">@reserva.DataReserva.ToString("dd/MM/yyyy HH:mm")</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
        else
        {
            <div class="text-center py-5">
                <span class="material-symbols-outlined" style="font-size: 64px; color: var(--text-muted);">receipt_long</span>
                <h5 class="text-white mt-3">Nenhuma reserva encontrada</h5>
                <p class="text-white">Ainda não existem reservas no sistema.</p>
            </div>
        }

    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
