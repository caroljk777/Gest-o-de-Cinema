@model GestaoDeCinema.Models.Sessao

@{
    ViewData["Title"] = "Adicionar Sess√£o";
    Layout = null;
}

<!DOCTYPE html>
<html lang="pt-pt">
<head>
    <meta charset="utf-8" />
    <meta content="width=device-width, initial-scale=1.0" name="viewport" />
    <title>@ViewData["Title"]</title>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Plus+Jakarta+Sans:wght@400;500;700;800&display=swap" rel="stylesheet" />
    <link href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:wght,FILL@100..700,0..1&display=swap" rel="stylesheet" />
    <link rel="stylesheet" href="~/css/cinemaTheme.css?v=2" />

    <style>
        :root {
            --primary-color: #ec135b;
            --bg-dark: #181113;
            --bg-card: #1e1e1e;
            --border-color: #333;
            --text-muted: #a0a0a0;
        }

        body {
            background-color: var(--bg-dark);
            color: white;
            font-family: 'Plus Jakarta Sans', sans-serif;
            overflow-x: hidden;
        }

        /* Sidebar */
        .sidebar {
            width: 260px;
            background-color: var(--bg-card);
            border-right: 1px solid var(--border-color);
            min-height: 100vh;
            position: fixed;
            top: 0;
            left: 0;
            z-index: 1000;
        }

        .nav-link {
            color: var(--text-muted);
            font-weight: 500;
            padding: 12px 16px;
            border-radius: 8px;
            display: flex;
            align-items: center;
            gap: 12px;
            transition: all 0.3s;
            text-decoration: none;
            margin-bottom: 4px;
        }

        .nav-link:hover, .nav-link.active {
            background-color: rgba(236, 19, 91, 0.1);
            color: var(--primary-color);
        }

        .nav-link .material-symbols-outlined {
            font-size: 22px;
        }

        /* Conte√∫do Principal */
        .main-content {
            margin-left: 260px;
            padding: 24px;
        }

        .form-container { 
            max-width: 700px; 
            margin: 0 auto; 
            padding: 30px; 
            background-color: #1e1e1e; 
            border-radius: 12px; 
            border: 1px solid #333; 
        }
        
        .form-label { 
            font-weight: 600; 
            color: white; 
            margin-bottom: 8px; 
        }
        
        .form-control, .form-select { 
            background-color: #2a2a2a; 
            border: 1px solid #333; 
            color: white; 
            border-radius: 8px; 
        }
        
        .form-control:focus, .form-select:focus { 
            background-color: #2a2a2a; 
            border-color: #ec135b; 
            color: white; 
            box-shadow: 0 0 0 0.25rem rgba(236, 19, 91, 0.25); 
        }
        
        .btn-primary-custom { 
            background-color: #ec135b; 
            color: white; 
            font-weight: 600; 
            border: none; 
            border-radius: 8px; 
            padding: 10px 24px; 
        }
        
        .btn-primary-custom:hover { 
            background-color: #c90f4d; 
        }
        
        .btn-secondary-custom { 
            background-color: transparent; 
            border: 1px solid #333; 
            color: #a0a0a0; 
            border-radius: 8px; 
            padding: 10px 24px; 
            text-decoration: none;
        }
        
        .btn-secondary-custom:hover { 
            background-color: #2a2a2a; 
            color: white; 
        }
    </style>
</head>
<body>

    <aside class="sidebar d-flex flex-column">
        <div class="d-flex align-items-center gap-3 px-4 py-4 mb-2">
            <img src="~/imagens/logo_cinema.jpg" style="height: 40px; border-radius: 6px;" alt="Logo">
            <h1 class="h5 fw-bold mb-0 text-white">Admin Cinema</h1>
        </div>

        <nav class="flex-grow-1 px-3">
            <a asp-controller="Admin" asp-action="Index" class="nav-link">
                <span class="material-symbols-outlined">dashboard</span>
                Dashboard
            </a>
            <a asp-controller="Filmes" asp-action="Index" class="nav-link">
                <span class="material-symbols-outlined">theaters</span>
                Filmes
            </a>
            <a asp-controller="Sessoes" asp-action="Index" class="nav-link active">
                <span class="material-symbols-outlined">movie_filter</span>
                Sess√µes
            </a>
            <a asp-controller="Admin" asp-action="VerReservas" class="nav-link">
                <span class="material-symbols-outlined">confirmation_number</span>
                Reservas
            </a>
            <a asp-controller="Utilizadores" asp-action="Index" class="nav-link">
                <span class="material-symbols-outlined">group</span>
                Utilizadores
            </a>
        </nav>

        <div class="px-3 pb-4 mt-auto">
            <a asp-controller="Account" asp-action="Perfil" class="nav-link">
                <span class="material-symbols-outlined">settings</span>
                Defini√ß√µes
            </a>
            <form asp-controller="Account" asp-action="Logout" method="post" class="w-100">
                <button type="submit" class="nav-link w-100 border-0 bg-transparent text-danger">
                    <span class="material-symbols-outlined">logout</span>
                    Sair
                </button>
            </form>
        </div>
    </aside>

    <div class="main-content">
        <div class="form-container">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h2 class="h3 fw-bold">@ViewData["Title"]</h2>

            </div>

            <form asp-action="Create" method="post">
                @Html.AntiForgeryToken()
                <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

                @if (ViewBag.Errors != null)
                {
                    <div class="alert alert-warning">
                        <h5>Erros de Valida√ß√£o (DEBUG):</h5>
                        <ul>
                            @foreach (var erro in ViewBag.Errors)
                            {
                                <li>@erro</li>
                            }
                        </ul>
                    </div>
                }

                <div class="mb-3">
                    <label asp-for="FilmeId" class="form-label">Filme</label>
                    <select asp-for="FilmeId" class="form-select" asp-items="ViewBag.Filmes" required>
                        <option value="">-- Selecione um filme --</option>
                    </select>
                    <span asp-validation-for="FilmeId" class="text-danger"></span>
                </div>

                <div class="row">
                    <div class="col-md-4 mb-3">
                        <label class="form-label">Data da Sess√£o</label>
                        <input type="date" id="dataInput" class="form-control" required 
                               oninvalid="this.setCustomValidity('Por favor, selecione a data')" 
                               oninput="this.setCustomValidity('')" />
                        <span class="text-danger" id="dataError"></span>
                    </div>

                    <div class="col-md-4 mb-3">
                        <label class="form-label">Hora da Sess√£o</label>
                        <input type="time" id="horaTimeInput" class="form-control" required 
                               oninvalid="this.setCustomValidity('Por favor, selecione a hora')" 
                               oninput="this.setCustomValidity('')" />
                        <span class="text-danger" id="horaError"></span>
                    </div>

                    <div class="col-md-4 mb-3">
                        <label asp-for="Sala" class="form-label">N√∫mero da Sala</label>
                        <input asp-for="Sala" type="number" min="1" max="20" class="form-control" placeholder="Ex: 1" required 
                               oninvalid="this.setCustomValidity('Por favor, preencha o n√∫mero da sala (1-20)')" 
                               oninput="this.setCustomValidity('')" />
                        <span asp-validation-for="Sala" class="text-danger"></span>
                    </div>
                </div>

                <!-- Campo hidden para enviar datetime combinado -->
                <input asp-for="Hora" type="hidden" id="horaHidden" />
                
                <!-- Campo hidden para Capacidade com valor padr√£o -->
                <input asp-for="Capacidade" type="hidden" value="30" />

                <div class="mb-4">
                    <label asp-for="Preco" class="form-label">Pre√ßo do Bilhete (‚Ç¨)</label>
                    <input asp-for="Preco" type="number" step="0.01" min="0" class="form-control" placeholder="Ex: 8.50" required 
                           oninvalid="this.setCustomValidity('Por favor, preencha o pre√ßo do bilhete')" 
                           oninput="this.setCustomValidity('')" />
                    <span asp-validation-for="Preco" class="text-danger"></span>
                </div>



                <hr class="my-4" style="border-color: #333;">

                <div class="d-flex gap-3">
                    <button type="submit" class="btn-primary-custom">Adicionar Sess√£o</button>
                    <a asp-action="Index" class="btn-secondary-custom">Cancelar</a>
                </div>
            </form>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://ajax.aspnetcdn.com/ajax/jquery.validation/1.17.0/jquery.validate.min.js"></script>
    <script src="https://ajax.aspnetcdn.com/ajax/jquery.validation/1.17.0/additional-methods.min.js"></script>
    <script src="https://ajax.aspnetcdn.com/ajax/mvc/5.2.3/jquery.validate.unobtrusive.min.js"></script>
    
    <script>
        // Combinar data e hora separadas antes de submeter
        document.addEventListener('DOMContentLoaded', function() {
            const dataInput = document.getElementById('dataInput');
            const horaTimeInput = document.getElementById('horaTimeInput');
            const horaHidden = document.getElementById('horaHidden');
            const form = document.querySelector('form');
            
            // Definir valores padr√£o
            const now = new Date();
            
            // Data de amanh√£ (padr√£o) para evitar erros de valida√ß√£o de passado
            now.setDate(now.getDate() + 1);
            const year = now.getFullYear();
            const month = String(now.getMonth() + 1).padStart(2, '0');
            const day = String(now.getDate()).padStart(2, '0');
            dataInput.value = `${year}-${month}-${day}`;
            dataInput.min = new Date().toISOString().split('T')[0]; // M√≠nimo √© hoje
            
            // Hora padr√£o = pr√≥xima hora cheia
            now.setHours(now.getHours() + 1);
            const defaultHours = String(now.getHours()).padStart(2, '0');
            horaTimeInput.value = `${defaultHours}:00`;
            
            // Inicializar e atualizar valor combinado
            function updateHiddenDate() {
                const data = dataInput.value;
                const hora = horaTimeInput.value;
                
                if (data && hora) {
                     // Formato ISO: YYYY-MM-DDTHH:MM
                     const dataHoraCombinada = `${data}T${hora}:00`;
                     horaHidden.value = dataHoraCombinada;
                     console.log('üîÑ Data/Hora atualizada para envio:', horaHidden.value);
                }
            }

            // Listeners para atualizar em tempo real
            dataInput.addEventListener('change', updateHiddenDate);
            horaTimeInput.addEventListener('change', updateHiddenDate);
            dataInput.addEventListener('input', updateHiddenDate);
            horaTimeInput.addEventListener('input', updateHiddenDate);
            
            // Inicializar valores
            updateHiddenDate();

            // Ao submeter, valida√ß√£o final
            form.addEventListener('submit', function(e) {
                // Atualizar o campo hidden uma √∫ltima vez
                updateHiddenDate();
                
                const filmeId = document.getElementById('FilmeId').value;
                const horaVal = horaHidden.value;
                
                console.log('üöÄ Tentando submeter form:', {
                    FilmeId: filmeId,
                    Hora: horaVal,
                    Sala: document.getElementById('Sala').value,
                    Preco: document.getElementById('Preco').value
                });

                if (!filmeId) {
                    e.preventDefault();
                    alert('Por favor, selecione um filme');
                    return false;
                }

                if (!horaVal) {
                    e.preventDefault();
                    alert('Por favor, defina a data e hora corretamente');
                    return false;
                }
            });
            
            console.log('‚úÖ Campos inicializados - Data:', dataInput.value, 'Hora:', horaTimeInput.value);
        });
    </script>
</body>
</html>
