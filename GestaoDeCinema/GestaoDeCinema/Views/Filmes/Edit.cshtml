@model GestaoDeCinema.Models.Filme

@{
    ViewData["Title"] = "Editar Filme";
}

<!DOCTYPE html>
<html lang="pt-pt">
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"]</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Plus+Jakarta+Sans:wght@400;500;600;700&display=swap" rel="stylesheet" />
    <link rel="stylesheet" href="~/css/cinemaTheme.css" />
    <style>
        body { background-color: #181113; color: white; font-family: 'Plus Jakarta Sans', sans-serif; }
        .form-container { max-width: 700px; margin: 40px auto; padding: 30px; background-color: #1e1e1e; border-radius: 12px; border: 1px solid #333; }
        .form-label { font-weight: 600; color: #a0a0a0; margin-bottom: 8px; }
        .form-control { background-color: #2a2a2a; border: 1px solid #333; color: white; border-radius: 8px; }
        .form-control:focus { background-color: #2a2a2a; border-color: #ec135b; color: white; box-shadow: 0 0 0 0.25rem rgba(236, 19, 91, 0.25); }
        .btn-primary-custom { background-color: #ec135b; color: white; font-weight: 600; border: none; border-radius: 8px; padding: 10px 24px; }
        .btn-primary-custom:hover { background-color: #c90f4d; }
        .preview-img { max-width: 200px; border-radius: 8px; margin-top: 10px; }
    </style>
</head>
<body>
    <div class="container">
        <div class="form-container">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h2 class="h3 fw-bold">@ViewData["Title"]</h2>
                <a asp-action="Index" class="btn btn-outline-secondary">Cancelar</a>
            </div>

            <form asp-action="Edit" method="post" enctype="multipart/form-data">
                @Html.HiddenFor(model => model.Id)
                <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

                <div class="mb-3">
                    <label asp-for="Titulo" class="form-label">Título do Filme</label>
                    <input asp-for="Titulo" class="form-control" required />
                    <span asp-validation-for="Titulo" class="text-danger"></span>
                </div>

                <div class="row">
                    <div class="col-md-6 mb-3">
                        <label asp-for="Genero" class="form-label">Género</label>
                        <input asp-for="Genero" class="form-control" />
                    </div>
                    <div class="col-md-6 mb-3">
                        <label asp-for="Duracao" class="form-label">Duração (minutos)</label>
                        <input asp-for="Duracao" type="number" class="form-control" />
                    </div>
                </div>

                <div class="mb-3">
                    <label asp-for="Sinopse" class="form-label">Sinopse</label>
                    <textarea asp-for="Sinopse" class="form-control" rows="4"></textarea>
                </div>

                <div class="mb-4">
                    <label class="form-label">Imagem Atual</label>
                    @if (!string.IsNullOrEmpty(Model.CapaImagem))
                    {
                        <div>
                            <img src="~/imagens/@Model.CapaImagem" alt="@Model.Titulo" class="preview-img" />
                        </div>
                    }
                    else
                    {
                        <p class="text-muted small">Sem imagem</p>
                    }
                    
                    <label for="ficheiroImagem" class="form-label mt-3">Alterar Imagem</label>
                    <input type="file" name="ficheiroImagem" id="ficheiroImagem" class="form-control" accept="image/*" />
                    <div class="form-text text-muted small">Deixe em branco para manter a imagem atual</div>
                </div>

                <hr class="my-4" style="border-color: #333;">

                <div class="d-flex gap-3">
                    <button type="submit" class="btn-primary-custom">Guardar Alterações</button>
                    <a asp-action="Index" class="btn btn-outline-secondary">Cancelar</a>
                </div>
            </form>
        </div>
    </div>

    @section Scripts {
        @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    }
</body>
</html>
