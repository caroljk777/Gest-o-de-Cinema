@model GestaoDeCinema.Models.Utilizador

@{
    ViewData["Title"] = "Detalhes do Utilizador";
}

<div class="row">
    <div class="col-md-8 offset-md-2">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h2 class="h4 fw-bold">@ViewData["Title"]</h2>
            <a asp-action="Index" class="btn btn-secondary">
                <i class="bi bi-arrow-left"></i> Voltar
            </a>
        </div>

        <div class="card shadow-sm">
            <div class="card-body">
                <dl class="row">
                    <dt class="col-sm-3">Nome</dt>
                    <dd class="col-sm-9">@Model.Nome</dd>

                    <dt class="col-sm-3">Email</dt>
                    <dd class="col-sm-9">@Model.Email</dd>

                    <dt class="col-sm-3">Função</dt>
                    <dd class="col-sm-9">
                        @if (Model.Funcao == "Administrador")
                        {
                            <span class="badge bg-danger">@Model.Funcao</span>
                        }
                        else
                        {
                            <span class="badge bg-primary">@Model.Funcao</span>
                        }
                    </dd>
                </dl>

                <hr>

                <div class="d-flex gap-2">
                    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">
                        Editar
                    </a>
                    <a asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-danger">
                        Eliminar
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>
