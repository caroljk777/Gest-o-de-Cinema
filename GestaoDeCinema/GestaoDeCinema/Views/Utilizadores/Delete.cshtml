@model GestaoDeCinema.Models.Utilizador

@{
    ViewData["Title"] = "Eliminar Utilizador";
    Layout = null;
}

<!DOCTYPE html>
<html lang="pt-pt">
<head>
    <meta charset="utf-8" />
    <meta content="width=device-width, initial-scale=1.0" name="viewport" />
    <title>@ViewData["Title"]</title>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Plus+Jakarta+Sans:wght@400;500;700;800&display=swap" rel="stylesheet" />
    <link href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:wght,FILL@100..700,0..1&display=swap" rel="stylesheet" />
    <link rel="stylesheet" href="~/css/cinemaTheme.css?v=2" />

    <style>
        :root {
            --primary-color: #ec135b;
            --bg-dark: #181113;
            --bg-card: #1e1e1e;
            --border-color: #333;
            --text-muted: #a0a0a0;
        }

        body {
            background-color: var(--bg-dark);
            color: white;
            font-family: 'Plus Jakarta Sans', sans-serif;
            overflow-x: hidden;
        }

        /* Sidebar */
        .sidebar {
            width: 260px;
            background-color: var(--bg-card);
            border-right: 1px solid var(--border-color);
            min-height: 100vh;
            position: fixed;
            top: 0;
            left: 0;
            z-index: 1000;
        }

        .nav-link {
            color: var(--text-muted);
            font-weight: 500;
            padding: 12px 16px;
            border-radius: 8px;
            display: flex;
            align-items: center;
            gap: 12px;
            transition: all 0.3s;
            text-decoration: none;
            margin-bottom: 4px;
        }

        .nav-link:hover, .nav-link.active {
            background-color: rgba(236, 19, 91, 0.1);
            color: var(--primary-color);
        }

        .nav-link .material-symbols-outlined {
            font-size: 22px;
        }

        /* ConteÃºdo Principal */
        .main-content {
            margin-left: 260px;
            padding: 24px;
        }

        .delete-container {
            max-width: 600px;
            margin: 0 auto;
            padding: 30px;
            background-color: #1e1e1e;
            border-radius: 12px;
            border: 1px solid #dc3545;
        }

        .warning-icon {
            font-size: 64px;
            color: #dc3545;
        }

        .user-info {
            background-color: #2a2a2a;
            padding: 20px;
            border-radius: 8px;
            margin: 20px 0;
        }

        .user-info dt {
            color: var(--text-muted);
            font-weight: 600;
            margin-bottom: 8px;
        }

        .user-info dd {
            color: white;
            margin-bottom: 16px;
        }

        .btn-delete {
            background-color: #dc3545;
            color: white;
            font-weight: 600;
            border: none;
            border-radius: 8px;
            padding: 10px 24px;
        }

        .btn-delete:hover {
            background-color: #c82333;
        }

        .btn-cancel {
            background-color: transparent;
            border: 1px solid #333;
            color: #a0a0a0;
            border-radius: 8px;
            padding: 10px 24px;
            text-decoration: none;
            display: inline-block;
        }

        .btn-cancel:hover {
            background-color: #2a2a2a;
            color: white;
        }

        
    </style>
</head>
<body>

    <aside class="sidebar d-flex flex-column">
        <div class="d-flex align-items-center gap-3 px-4 py-4 mb-2">
            <img src="~/imagens/logo_cinema.jpg" style="height: 40px; border-radius: 6px;" alt="Logo">
            <h1 class="h5 fw-bold mb-0 text-white">Admin Cinema</h1>
        </div>

        <nav class="flex-grow-1 px-3">
            <a asp-controller="Admin" asp-action="Index" class="nav-link">
                <span class="material-symbols-outlined">dashboard</span>
                Dashboard
            </a>
            <a asp-controller="Filmes" asp-action="Index" class="nav-link">
                <span class="material-symbols-outlined">theaters</span>
                Filmes
            </a>
            <a asp-controller="Sessoes" asp-action="Index" class="nav-link">
                <span class="material-symbols-outlined">movie_filter</span>
                SessÃµes
            </a>
            <a asp-controller="Admin" asp-action="VerReservas" class="nav-link">
                <span class="material-symbols-outlined">confirmation_number</span>
                Reservas
            </a>
            <a asp-controller="Utilizadores" asp-action="Index" class="nav-link active">
                <span class="material-symbols-outlined">group</span>
                Utilizadores
            </a>
        </nav>

        <div class="px-3 pb-4 mt-auto">
            <a asp-controller="Account" asp-action="Perfil" class="nav-link">
                <span class="material-symbols-outlined">settings</span>
                DefiniÃ§Ãµes
            </a>
            <form asp-controller="Account" asp-action="Logout" method="post" class="w-100">
                <button type="submit" class="nav-link w-100 border-0 bg-transparent text-danger">
                    <span class="material-symbols-outlined">logout</span>
                    Sair
                </button>
            </form>
        </div>
    </aside>

    <div class="main-content">
        <div class="delete-container">
            <div class="text-center mb-4">
                <h2 class="h3 fw-bold text-danger mt-3">Eliminar Utilizador</h2>
            </div>



            <div class="user-info">
                <dl class="row mb-0">
                    <dt class="col-sm-4">Nome</dt>
                    <dd class="col-sm-8">@Model.Nome</dd>

                    <dt class="col-sm-4">Email</dt>
                    <dd class="col-sm-8">@Model.Email</dd>

                    <dt class="col-sm-4">FunÃ§Ã£o</dt>
                    <dd class="col-sm-8 mb-0">
                        @if (Model.Funcao == "Administrador")
                        {
                            <span class="badge bg-danger">@Model.Funcao</span>
                        }
                        else
                        {
                            <span class="badge bg-primary">@Model.Funcao</span>
                        }
                    </dd>
                </dl>
            </div>

            <form asp-action="Delete" method="post">
                @Html.AntiForgeryToken()
                <input type="hidden" asp-for="Id" />
                <div class="d-flex gap-3 mt-4">
                    <button type="submit" class="btn-delete">
                        <span class="material-symbols-outlined" style="font-size: 16px; vertical-align: middle;">delete</span>
                        Confirmar EliminaÃ§Ã£o
                    </button>
                    <a asp-action="Index" class="btn-cancel">Cancelar</a>
                </div>
            </form>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
