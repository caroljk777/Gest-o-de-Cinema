@model IEnumerable<GestaoDeCinema.Models.Reserva>

@{
    Layout = "_LayoutReservas";
    ViewData["Title"] = "Minhas Reservas";
}
@section Styles {
        :root {
            --primary-color: #ec135b;
            --bg-dark: #181113;
            --bg-card: #1e1e1e;
            --border-color: #333;
            --text-muted: #a0a0a0;
        }

        body {
            background-color: var(--bg-dark);
            color: white;
            font-family: 'Plus Jakarta Sans', sans-serif;
        }

        .main-content {
            padding: 24px;
            max-width: 1200px;
            margin: 0 auto;
        }

        .card-reserva {
            background-color: var(--bg-card);
            border: 1px solid var(--border-color);
            border-radius: 12px;
            padding: 20px;
            margin-bottom: 16px;
            transition: transform 0.2s;
        }

        .card-reserva:hover {
            transform: translateY(-2px);
            border-color: var(--primary-color);
        }

        .badge-status {
            padding: 6px 12px;
            border-radius: 20px;
            font-size: 0.85rem;
            font-weight: 600;
        }

        .status-confirmada {
            background-color: rgba(40, 167, 69, 0.2);
            color: #28a745;
        }

        .status-cancelada {
            background-color: rgba(220, 53, 69, 0.2);
            color: #dc3545;
        }

        .btn-nova-reserva {
            background: linear-gradient(135deg, var(--primary-color) 0%, #c90f4d 100%);
            color: white;
            border: none;
            padding: 12px 24px;
            border-radius: 8px;
            font-weight: 600;
            text-decoration: none;
            display: inline-flex;
            align-items: center;
            gap: 8px;
        }

        .btn-nova-reserva:hover {
            transform: translateY(-2px);
            color: white;
        }
    </style>
}

<div class="d-flex justify-content-between align-items-center mb-4">
            <div>
                <h1 class="h3 fw-bold text-white mb-1">Minhas Reservas</h1>
                <p class="text-white mb-0">Gerencie suas reservas de cinema</p>
            </div>

        </div>

        @if (TempData["Sucesso"] != null)
        {
            <div class="alert alert-success alert-dismissible fade show" role="alert">
                @TempData["Sucesso"]
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            </div>
        }

        @if (TempData["Erro"] != null)
        {
            <div class="alert alert-danger alert-dismissible fade show" role="alert">
                @TempData["Erro"]
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            </div>
        }

        @if (Model.Any())
        {
            @foreach (var reserva in Model)
            {
                <div class="card-reserva">
                    <div class="row align-items-center">
                        <div class="col-md-8">
                            <h5 class="fw-bold text-white mb-2">@(reserva.Sessao?.Filme?.Titulo ?? "Filme")</h5>
                            <div class="d-flex flex-wrap gap-3 text-white small">
                                <span>
                                    <span class="material-symbols-outlined" style="font-size: 16px; vertical-align: middle;">calendar_today</span>
                                    @(reserva.Sessao?.Hora.ToString("dd/MM/yyyy HH:mm") ?? "Data N/A")
                                </span>
                                <span>
                                    <span class="material-symbols-outlined" style="font-size: 16px; vertical-align: middle;">event_seat</span>
                                    @(reserva.NumeroLugares) lugar(es)
                                </span>
                                <span>
                                    <span class="material-symbols-outlined" style="font-size: 16px; vertical-align: middle;">confirmation_number</span>
                                    Cartão **** **** **** @reserva.NumeroCartao.Substring(12)
                                </span>
                            </div>
                        </div>
                        <div class="col-md-4 text-end">
                            <h5 class="text-primary-custom fw-bold mb-2">@reserva.PrecoTotal.ToString("C")</h5>
                            <form asp-action="Delete" asp-route-id="@reserva.Id" method="post" class="d-inline" onsubmit="return confirm('Tem certeza que deseja cancelar esta reserva?');">
                                <button type="submit" class="btn btn-sm btn-outline-danger">
                                    <span class="material-symbols-outlined" style="font-size: 16px; vertical-align: middle;">delete</span>
                                    Cancelar
                                </button>
                            </form>
                        </div>
                    </div>
                </div>
            }
        }
        else
        {
            <div class="text-center py-5">
                <span class="material-symbols-outlined" style="font-size: 64px; color: var(--text-muted);">receipt_long</span>
                <h5 class="text-white mt-3">Nenhuma reserva encontrada</h5>
                <p class="text-white">Faça sua primeira reserva clicando no botão acima!</p>
            </div>
        }

        <div class="mt-4">
            <a asp-controller="Home" asp-action="Index" class="text-white text-decoration-none">
                <span class="material-symbols-outlined" style="font-size: 18px; vertical-align: middle;">arrow_back</span>
            Voltar ao Início
        </a>
    </div>
